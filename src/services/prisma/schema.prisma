generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType = "library"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  DEFAULT
  ADMIN
}

enum Kind {
  FRONTEND
  BACKEND
  UI
  DATABASES
  STYLES
  ALGORITHMS
  ARCHITECTURE
  TOOLS
  FRAMEWORKS
  TESTING
  DEVOPS
  SECURITY
  AI
}

model Resources {
  id                String              @id @default(uuid())
  title             String              @unique
  description       String
  imgUrl            String
  faviconUrl        String
  resourceUrl       String              @unique
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  published         Boolean             @default(false)
  kind              Kind[]
  favouritedBy      FavouriteResource[]
  resourceCreatedBy ResourcesCreated[]
}

model Users {
  id                  String              @id @default(uuid())
  username            String              @unique
  password            String
  email               String              @unique
  role                Role                @default(DEFAULT)
  resourcesCreated    ResourcesCreated[]
  favouritesResources FavouriteResource[]
}

model FavouriteResource {
  userId              String
  resourceId          String
  user                Users                @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource            Resources            @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  favouritedAt        DateTime             @default(now())

  @@id([userId, resourceId])
}

model ResourcesCreated {
  userId              String
  resourceId          String
  user                Users                @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource            Resources            @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  createdAt           DateTime             @default(now())

  @@id([userId, resourceId])
}
